{
  "name": "tron",
  "description": "Self-hosted AI-powered terminal. Run shells, use local or cloud LLMs (Ollama, OpenAI, Claude), and get agent-assisted commands from your desktop.",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "tsc -p electron/tsconfig.json && electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on tcp:5173 && npm run dev:electron\" \"wait-on tcp:5174 && npm run dev:web \"",
    "build:react": "tsc -b && vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:react && npm run build:electron && electron-builder",
    "build:mac": "npm run build:react && npm run build:electron && electron-builder --mac",
    "build:win": "npm run build:react && npm run build:electron && electron-builder --win --config.npmRebuild=false",
    "build:linux": "npm run build:react && npm run build:electron && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:server": "tsc -p server/tsconfig.json",
    "dev:web-server": "npm run build:server && node dist-server/index.js --dev",
    "dev:web": "concurrently \"npm run dev:react\" \"wait-on tcp:5173 && npm run dev:web-server\"",
    "build:web": "npm run build:react && npm run build:server",
    "start:web": "node dist-server/index.js",
    "start:gateway": "TRON_MODE=gateway node dist-server/index.js",
    "start:ssh-only": "TRON_SSH_ONLY=true node dist-server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "pretest:e2e": "npm run build:react && npm run build:electron",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:e2e:headed": "playwright test --config e2e/playwright.config.ts --headed",
    "test:e2e:report": "playwright test --config e2e/playwright.config.ts --reporter=html && playwright show-report",
    "update-models": "npx tsx scripts/update-models.ts"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-virtual": "^3.13.18",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "dotenv": "^17.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.2.1",
    "framer-motion": "^12.34.1",
    "http-proxy-middleware": "^3.0.5",
    "lucide-react": "^0.564.0",
    "marked": "^17.0.2",
    "posthog-js": "^1.352.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ssh2": "^1.17.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/express": "^5.0.6",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ssh2": "^1.15.5",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "optionalDependencies": {
    "node-pty": "^1.1.0"
  }
}
